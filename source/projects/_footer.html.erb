<footer class="footer">
  <div class="content-container">
    <h2 class="section__title center">Other Work</h2>
    <span class="section__divider"></span>
    <section class="row">
      <% projects.each do |project_slug| %>
        <div class="column large-4">
          <%= project_preview(project_slug) %>
        </div>
      <% end %>

      <div class="column large-4">
        <a href="/#projects">
          <ul>
            <li class="portfolio-card">
              <div class="portfolio-card-image">
                <img src="/images/portfolio/arrow.jpg" class="card__image"/>
              </div>

              <div class="portfolio-card-info">
                <p class="portfolio-title card-section__title">View All Projects</p>
              </div>
            </li>
          </ul>
        </a>
      </div>
    </section>
  </div>
</footer>
