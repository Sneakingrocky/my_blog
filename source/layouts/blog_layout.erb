---
section: blog
---

<% wrap_layout :layout do %>
  <%= partial "partials/nav" %>
  <section class="content-container--small">
    <div class="article">
      <h3 class="article-title center"><%= current_article.title %></h3>
      <div class="meta">
        <time class="meta__date">
          <%= current_article.date.strftime('%b %e %Y') %>
        </time>
        <%= tag_links(current_article) %>
      </div>

      <div class="article-body"><%= yield %></div>
    </div>

    <div class="read-more margin-top">
      <% previous_article = current_article.previous_article %>
      <% if previous_article %>
        <%= link_to "← #{previous_article.title}", previous_article,class: "left submit-button" %>
      <% end %>

      <% next_article = current_article.next_article %>
      <% if next_article %>
        <%= link_to "#{next_article.title} →", next_article, class: "right submit-button" %>
      <% end %>
    </div>
    <div class="footer"></div>
  </section>
<% end %>
